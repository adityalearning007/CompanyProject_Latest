<h1>Leave Application</h1>


<form asp-action="LeaveApplication">
    <div class="row">
        <div class="col-md-3">
            <label asp-for="EmpId" class="control-label"></label>
            <input asp-for="EmpId" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="PlanStartDate" class="control-label"></label>
            <input type="date" asp-for="PlanStartDate" class="form-control" />

        </div>
        <div class="col-md-3">
            <label asp-for="PlanEndDate" class="control-label"></label>
            <input type="date" asp-for="PlanEndDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Reason" class="control-label"></label>
            <input asp-for="Reason" class="form-control" />
        </div>
    </div>
    <br />
    <div>
        <input type="submit" class="btn btn-success" value="Submit" />
    </div>
</form>
